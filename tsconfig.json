{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "esModuleInterop": true,
    "importHelpers": true,
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "pretty": true,
    "strict": true,
    "target": "es2020"
  },
  "include": [
    "src/**/*.ts",
    "types/*.d.ts"
  ]
}
